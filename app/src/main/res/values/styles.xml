<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Udacity">

        <item name="android:textSize">@dimen/TextSize</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
    </style>

    <style name="Details">

        <item name="android:textSize">@dimen/TextSize</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorLink">@color/textColorLink</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>

    </style>
    <style name="ImageIcons">

        <item name="android:layout_width">@dimen/IconImagewidth</item>
        <item name="android:layout_height">@dimen/IconImageHeight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>

    </style>
    <style name="Bottomtagline">

        <item name="android:textSize">@dimen/BottomTaglineTextSize</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColorLink">@color/textColorLink</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>



</resources>
